<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Heater Block"
        app:layout_constraintStart_toStartOf="@+id/temperatureMinusOne"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/temperatureMinusOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/tempDisplay"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <LinearLayout
        android:id="@+id/tempDisplay"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/temperatureMinusOne"
        app:layout_constraintEnd_toStartOf="@+id/temperaturePlusOne"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/temperatureMinusOne"
        app:layout_constraintTop_toTopOf="@+id/temperatureMinusOne">

        <TextView
            android:id="@+id/targetTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="95°C" />

        <TextView
            android:id="@+id/realTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="73°C" />
    </LinearLayout>

    <Button
        android:id="@+id/temperaturePlusOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/storetemps"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tempDisplay"
        app:layout_constraintTop_toTopOf="@+id/temperatureMinusOne" />

    <LinearLayout
        android:id="@+id/storetemps"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/temperatureMinusOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/temperaturePlusOne"
        app:layout_constraintTop_toTopOf="@+id/temperatureMinusOne"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/storeAsSteam"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:text="Store as steam"
            android:textSize="12sp" />

        <Button
            android:id="@+id/storeAsBrew"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:text="Store as brew"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>